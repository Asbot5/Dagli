@page
@model Dagli.Pages.Products.EditProductModel
@{
}
<style>
    h5 {
        text-align: center;
        color: blueviolet
    }
</style>

<h6 class="pageTitle">Opdater produkt</h6>
<form class="form-horizontal" method="post">
    <div asp-validation-summary="ModelOnly"></div>

    <p>Varenummer er: @Model.Product.ID</p>

    <div class="form-group" style="width:25%">
        @*<label asp-for="@Model.Product.ID" class="control-label"></label>*@
            <input hidden="hidden" asp-for="@Model.Product.ID" class="form-control">
    </div>

    <div class="form-group" style="width:25%">
        <label asp-for="@Model.Product.Name" class="col-sm-2 control-label">Navn</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Product.Name" type="text" class="form-control">
            <span asp-validation-for="@Model.Product.Name" class="text-danger"></span>
        </div>
    </div>
    <div style="width:25%" class="form-group">
        <label asp-for="@Model.Product.Description" class="col-sm-2 control-label">Beskrivelse</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Product.Description" type="text" class="form-control">
            <span asp-validation-for="@Model.Product.Description" class="text-danger"></span>
        </div>
    </div>
    <div style="width:25%" class="form-group">
        <label asp-for="@Model.Product.Price" class="col-sm-2 control-label">Pris</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Product.Price" type="text" class="form-control">
            <span asp-validation-for="@Model.Product.Price" class="text-danger"></span>
        </div>
    </div>

    <div style="width:25%" class="form-group">
        <label asp-for="@Model.Product.ImageName" class="col-sm-2 control-label">Billede</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Product.ImageName" type="text" class="form-control">
            <span asp-validation-for="@Model.Product.ImageName" class="text-danger"></span>
        </div>
    </div>

    <div style="width:25%" class="form-group">
        <label asp-for="@Model.Product.ProductType" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <select asp-for="@Model.Product.ProductType" class="form-control">
                <option>Diverse</option>
                <option>Frugt og grønt</option>
                <option>Drikkevarer</option>
                <option>Fisk og kød</option>
                <option>Frysevarer</option>
                <option>Hus og have</option>
            </select>
            <span asp-validation-for="@Model.Product.ProductType" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">
                Edit product
            </button>
        </div>
    </div>
</form>